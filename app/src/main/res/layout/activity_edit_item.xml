<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deridder.kobe.mobapp10.todokobederidder.EditItemActivity">

    <EditText
        android:id="@+id/et_edit_item"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="38dp" />

    <Button
        android:id="@+id/btn_set_edited_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_set_edited_item_str"
        android:layout_below="@+id/et_edit_item"
        android:layout_alignEnd="@+id/et_edit_item"
        android:layout_marginTop="22dp" />
</RelativeLayout>
